{
  "name": "mcp-multi-server-config",
  "version": "1.0.0",
  "description": "MCP configuration for multiple servers including Brave Search, Weather, and Filesystem",
  "main": "mcp-config.json",
  "scripts": {
    "install-filesystem": "npm install -g @modelcontextprotocol/server-filesystem",
    "install-sequential-thinking": "npm install -g @modelcontextprotocol/server-sequential-thinking",
    "install-puppeteer": "npm install -g puppeteer-mcp-server",
    "install-all": "npm run install-filesystem && npm run install-sequential-thinking && npm run install-puppeteer",
    "start-filesystem": "npx @modelcontextprotocol/server-filesystem",
    "start-sequential-thinking": "npx @modelcontextprotocol/server-sequential-thinking",
    "start-puppeteer": "npx puppeteer-mcp-server",
    "test": "echo 'Test the MCP server connections'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "brave-search",
    "search",
    "weather",
    "forecast",
    "filesystem",
    "file-operations"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "latest",
    "@modelcontextprotocol/server-sequential-thinking": "latest",
    "puppeteer-mcp-server": "latest"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
