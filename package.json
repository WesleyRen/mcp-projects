{
  "name": "mcp-multi-server-config",
  "version": "1.0.0",
  "description": "MCP configuration for multiple servers including Brave Search, Weather, and Filesystem",
  "main": "mcp-config.json",
  "scripts": {
    "install-brave": "npm install -g @modelcontextprotocol/server-brave-search",
    "install-weather": "npm install -g @modelcontextprotocol/server-weather",
    "install-filesystem": "npm install -g @modelcontextprotocol/server-filesystem",
    "install-all": "npm run install-brave && npm run install-weather && npm run install-filesystem",
    "start-brave": "npx @modelcontextprotocol/server-brave-search",
    "start-weather": "npx @modelcontextprotocol/server-weather",
    "start-filesystem": "npx @modelcontextprotocol/server-filesystem",
    "test": "echo 'Test the MCP server connections'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "brave-search",
    "search",
    "weather",
    "forecast",
    "filesystem",
    "file-operations"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/server-brave-search": "^0.1.0",
    "@modelcontextprotocol/server-weather": "^0.1.0",
    "@modelcontextprotocol/server-filesystem": "^0.1.0"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
